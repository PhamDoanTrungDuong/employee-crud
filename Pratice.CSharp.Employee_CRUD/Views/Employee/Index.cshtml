@model IEnumerable<Pratice.CSharp.Employee_CRUD.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee Register</h1>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success font-weight-bold"> + Employee</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeLocation)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.EmployeeId" class="text-warning font-weight-bolder">Edit </a>    
                <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="text-danger font-weight-bold" onclick="return confirm("Are you sure  to delete this record?")"> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
